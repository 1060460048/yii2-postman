<?xml version="1.0" encoding="utf-8"?>
<phpunit bootstrap="./unit/bootstrap.php"
         colors="true"
         convertErrorsToExceptions="true"
         convertNoticesToExceptions="true"
         convertWarningsToExceptions="true"
         stopOnFailure="false">
