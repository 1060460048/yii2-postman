        <listener class="\postmantest\TestListener" file="./unit/TestListener.php"/>
    </listeners>
    <testsuites>
        <testsuite name="Test Suite">
            <directory>./unit/postman</directory>
        </testsuite>
    </testsuites>
</phpunit>